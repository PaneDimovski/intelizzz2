<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0."
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:src="@drawable/logo" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:gravity="end|top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_settings" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:id="@+id/lineuser"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"

        android:background="@drawable/round_lightblue_background"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:baselineAligned="true"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:text="Set the frequency and time of how"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:text="many times your device wakes up"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:text="in a 24hour period:"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/time_chouse_form"
                    android:orientation="vertical">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="7dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/btn_alarm_one"
                            android:layout_width="@dimen/alarm_set"
                            android:layout_height="@dimen/alarm_set"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/one" />

                        <ImageView
                            android:id="@+id/btn_alarm_one_2"
                            android:layout_width="@dimen/alarm_set"
                            android:layout_height="@dimen/alarm_set"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/one_2"
                            android:visibility="invisible" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn_alarm_one_2"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/one_on"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/on" />

                            <ImageView
                                android:id="@+id/one_off"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/off"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="7dp"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:id="@+id/btn_alarm_two"
                            android:layout_width="@dimen/alarm_set"
                            android:layout_height="@dimen/alarm_set"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/two" />

                        <ImageView
                            android:id="@+id/btn_alarm_two_2"
                            android:layout_width="@dimen/alarm_set"
                            android:layout_height="@dimen/alarm_set"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/two_2" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn_alarm_two_2"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/two_on"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/on" />

                            <ImageView
                                android:id="@+id/two_off"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/off"
                                android:visibility="gone" />


                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_width="60dp"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="7dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/btn_alarm_three"
                            android:layout_width="@dimen/alarm_set"
                            android:layout_height="@dimen/alarm_set"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/three" />

                        <ImageView
                            android:id="@+id/btn_alarm_three_2"
                            android:layout_width="@dimen/alarm_set"
                            android:layout_height="@dimen/alarm_set"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/three_2" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btn_alarm_three_2"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/three_on"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/on" />

                            <ImageView
                                android:id="@+id/three_off"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/off"
                                android:visibility="gone" />


                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="7dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/btn_alarm_four"
                            android:layout_width="@dimen/alarm_set"
                            android:layout_height="@dimen/alarm_set"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/four" />

                        <ImageView
                            android:id="@+id/btn_alarm_four_2"
                            android:layout_width="@dimen/alarm_set"
                            android:layout_height="@dimen/alarm_set"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/four_2" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btn_alarm_four_2"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/four_on"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/on" />

                            <ImageView
                                android:id="@+id/four_off"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/off"
                                android:visibility="gone" />


                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/time_form"
                android:gravity="center"
                android:padding="3dp"
                android:text="08:00 am"
                android:textColor="@color/black"
                android:textSize="@dimen/font_bigger"
                android:textStyle="bold"

                />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="60dp"

        android:layout_marginBottom="5dp"

        android:orientation="horizontal">

        <ImageView

            android:id="@+id/btn_user_back"

            android:layout_width="@dimen/unit_back_icon_size"
            android:layout_height="@dimen/unit_back_icon_size"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"

            android:src="@drawable/ic_action_back" />

        <ImageView

            android:id="@+id/btn_ok"

            android:layout_width="50dp"

            android:layout_height="50dp"

            android:layout_gravity="center"


            android:layout_weight="1"

            android:src="@drawable/next" />

        <TextView

            android:layout_width="0dp"

            android:layout_height="0dp"

            android:layout_weight="0.2"

            android:text="" />

    </LinearLayout>

</LinearLayout>

