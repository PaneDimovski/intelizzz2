<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_warning"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="0dp"
            android:layout_weight="2.3"
            android:src="@drawable/ic_forgotten_password"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:visibility="gone"
            android:textColor="@color/text_white" />

        <TextView
            android:id="@+id/item_unit_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="IntelliZzz"
            android:textColor="@color/text_white" />

        <TextView
            android:id="@+id/number_7"
            android:layout_width="0dp"
            android:layout_height="@dimen/days_icon_height"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/red_rectangle"
            android:gravity="center" />

        <TextView
            android:id="@+id/number_6"
            android:layout_width="0dp"
            android:layout_marginRight="1dp"
            android:layout_height="@dimen/days_icon_height"
            android:layout_weight="1"
            android:background="@drawable/red_rectangle"
            android:gravity="center" />

        <TextView
            android:id="@+id/number_5"
            android:layout_width="0dp"
            android:layout_marginRight="1dp"
            android:layout_height="@dimen/days_icon_height"
            android:layout_weight="1"
            android:background="@drawable/red_rectangle"
            android:gravity="center" />

        <TextView
            android:id="@+id/number_4"
            android:layout_width="0dp"
            android:layout_marginRight="1dp"
            android:layout_height="@dimen/days_icon_height"
            android:layout_weight="1"
            android:background="@drawable/red_rectangle"
            android:gravity="center" />

        <TextView
            android:id="@+id/number_3"
            android:layout_width="0dp"
            android:layout_marginRight="1dp"
            android:layout_height="@dimen/days_icon_height"
            android:layout_weight="1"
            android:background="@drawable/red_rectangle"
            android:gravity="center" />

        <TextView
            android:id="@+id/number_2"
            android:layout_width="0dp"
            android:layout_marginRight="1dp"
            android:layout_height="@dimen/days_icon_height"
            android:layout_weight="1"
            android:background="@drawable/red_rectangle"
            android:gravity="center" />

        <TextView
            android:id="@+id/number_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/days_icon_height"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/red_rectangle"
            android:gravity="center" />

        <ImageView
            android:id="@+id/item_gsimbol"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1.8"
            android:src="@drawable/ic_green_map_car_pin"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/item_battery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="0dp"
            android:layout_weight="2"
            android:visibility="invisible"
            android:src="@drawable/ic_battery" />
    </LinearLayout>

    <ImageView
        android:id="@+id/group_arrow"
        android:layout_width="@dimen/spacing_large"
        android:layout_height="@dimen/spacing_large"
        android:layout_margin="@dimen/spacing_small"
        android:src="@drawable/ic_arrow_down_right"
        android:visibility="gone" />
</LinearLayout>